FROM debian:bullseye-slim
RUN apt-get update && apt-get install -y \
    curl \
    bash \
    netcat && \
    rm -rf /var/lib/apt/lists && \
    addgroup axway && \
    adduser --disabled-password --gecos '' --ingroup axway axway

USER axway
COPY *.sh ./

CMD [ "./run-test-upgrade.sh" ]
